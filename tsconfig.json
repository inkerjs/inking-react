{
  "version": "2.0.10",
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es6"]
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules", "lib", "__test__", "**/__stories__/**/*", "*.test.ts", "*.test.tsx"]
}
